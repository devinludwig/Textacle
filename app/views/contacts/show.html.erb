<h1> <%= @contact.name %> </h1>


<%= form_for [current_user, @message], url: user_messages_path(contact: true) do |f| %>
  <div class="input-field">
    <%= f.text_field :body %>
    <%= f.label :body, "Text" %>
    <%= f.text_field :to, type: "hidden", value: @contact.number %>
  </div>
  <%= f.submit "Send", class: "btn waves-effect" %>
<% end %>
